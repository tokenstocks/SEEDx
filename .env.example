# TokenStocks Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
# Get your PostgreSQL connection string from Supabase:
# Project Settings → Database → Connection string (URI)
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret (must be at least 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your-strong-jwt-secret-minimum-32-characters-required-here

# Encryption Key (must be exactly 32 characters for AES-256)
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=your-32-character-encryption!!

# Supabase Configuration
# Get these from your Supabase project:
# Project Settings → API → Project URL and service_role key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=

# Session Secret (for Express sessions)
SESSION_SECRET=your-session-secret-here

# Stellar Network Configuration
STELLAR_NETWORK=testnet  # or 'mainnet' for production
STELLAR_ISSUER_PUBLIC=GXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
STELLAR_ISSUER_SECRET=SXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Application Configuration
NODE_ENV=development  # development, test, or production
PORT=5000
FRONTEND_URL=http://localhost:5173

# Optional: Email Service (if implemented)
# EMAIL_SERVICE_API_KEY=your-email-service-api-key

# Optional: Monitoring & Analytics
# SENTRY_DSN=https://...ingest.sentry.io/...

# Test Environment (for CI/CD)
# TEST_DATABASE_URL=postgresql://test:test@localhost:5432/tokenstocks_test
# TEST_SUPABASE_URL=https://test-project.supabase.co
# TEST_SUPABASE_SERVICE_ROLE_KEY=test-key
# TEST_JWT_SECRET=test-jwt-secret-32-characters!!
# TEST_ENCRYPTION_KEY=test-encryption-key-32chars!!
